<%- include("./partials/header"); %>
<body>
  <%- include("./partials/navbar"); %>

  <div class="container">
    <br>
    <a href="/" class="btn btn-secondary" role="button">Voltar</a>

    <div class="card" id="ask-card">
      <div class="card-header">
        <h3>Realizar pergunta</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/new-question">
          <div class="form-group">
            <label for="title">Título</label>
            <input type="text" class="form-control" name="title">
          </div>
          <div class="form-group">
            <label for="description">Descrição</label>
            <textarea placeholder="Descreva sua pergunta aqui" name="description" rows="5" class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>  
  </div>

</body>
<%- include("./partials/footer"); %>